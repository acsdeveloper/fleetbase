{{!-- Updated table/cell/link-to.hbs --}}

<LinkTo @route={{@column.route}} @model={{@row}} @disabled={{and @column.permission (cannot @column.permission)}} class={{@column.linkClass}} ...attributes>
    
    {{!-- Text content FIRST --}}
    {{#if (has-block)}}
        {{yield}}
    {{else}}
        {{or @value @column.linkText "-"}}
    {{/if}}
    
    {{!-- Icon AFTER the text --}}
    {{#if @column.linkIcon}}
        <span class="btn-icon-wrapper" data-icon-prefix={{@column.linkIconPrefix}}>
            <FaIcon
                @prefix={{@column.linkIconPrefix}}
                @icon={{@column.linkIcon}}
                @size={{@column.linkIconSize}}
                @rotation={{@column.linkIconRotation}}
                @flip={{@column.linkIconFlip}}
                @spin={{@column.linkIconSpin}}
                class={{@column.linkIconClass}}
            />
        </span>
    {{/if}}
    
</LinkTo>